@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_IntroLayout.cshtml";
}
@section AdditonalScripts {
    <script type="text/javascript">
        $(function () {
            $("#SelectedCategory").change(function () {
                location.href = "map?reason=" + $(this).val();
            });
        });
    </script>
}

 <!-- Jumbotron -->
      <div class="jumbotron">
        <h1>Are you here for @ViewBag.Category?</h1>
         <a class="btn btn-large btn-success" href="map?reason=@ViewBag.Category">Continue</a>
         <hr />
           <p class="lead">
              Not here for @ViewBag.Category, then tell us your reason for visiting
              @Html.DropDownList("SelectedCategory")
          </p>
      </div>

